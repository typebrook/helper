mvt_decode() {
  if [[ ! -t 0 ]]; then
    tmp=$(mktemp)
    cat >$tmp
  else
    tmp=$1
  fi
  mvt_decode.py $tmp | tr \' \" | sed 's/True/true/g' | jq .
}
