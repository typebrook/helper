# lf
alias r='_lf_cd'
alias l='_lf_cd'
_lf_cd() {
  tempfile=$(mktemp -t tmp.XXXXXX)
  lf --last-dir-path $tempfile

  test -f "$tempfile" && \
  cd -- "$(cat "$tempfile")" && \
  rm -f -- "$tempfile"
}

