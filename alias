alias get-tig='curl -LO https://github.com/typebrook/tig/releases/download/tig-2.5.0/tig'
upload_tig() {
  github-release.sh \
    github_api_token=$GITHUB_API_TOKEN \
    repo=typebrook/tig \
    tag=LATEST \
    type=asset \
    filename=$(which tig)
    action=overwrite
}

