# image
image.vertical() { 
  suffix=${1##*.}
  convert "$@" -append $(basename -s .$suffix $1)-$(basename -s .$suffix ${@: -1}).${format:-$suffix}
}
image.horizontal() { 
  convert "$@" +append output.png 
}
image.from_data_url() {
  [[ $1 == '' ]] && echo File name needed && return 1
  xsel -ob | sed -E 's/^.+,//' | base64 -d >$1
  identify $1
}
image.text() {
    convert \
        -size 230x130 \
        -background lightblue \
        -font Noto-Sans-Bold \
        -pointsize 25 \
        -fill black \
        -gravity Center \
        caption:"${1:=foo}" \
        -flatten \
        "${2:=foo}".jpg
}

