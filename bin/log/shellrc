# about vimwiki
alias cdl='cd ~/log'
alias chw='tig -C ~/log'
ww() { entry="${1:-plan.context}"; vim ~/log/${entry%%.md}.md; }
wj() { echo "$@" >>~/log/buffer.md; }
wg() { grep -r "$@" --color --exclude-dir={logseq,.git,.obsidian} ~/log; }
wi() { cat ~/log/${1%%.md}.md; }
wD() { rm ~/log/${1%%.md}.md; }
alias dia='diary'
alias dias='diary specify'
alias diaa='diary print'
alias diat='diary today'
