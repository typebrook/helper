alias rr='_move_to_tmp'
cdp() {
  [[ ! -d $1 ]] && mkdir -p $1
  cd $1
}
_move_to_tmp() { 
  mv $@ /tmp 
}
prompt() {
  TMPFILE=$(mktemp)
  echo -e $1 > $TMPFILE \
  && vim $TMPFILE \
  && sed -i '$ q; s/$/ \\/' $TMPFILE \
  && eval $(cat $TMPFILE | tee /dev/tty)
  rm $TMPFILE
}

